module Somme

  use int.Int
  use ref.Refint

  let somme (m n : int) : int
    requires { m >= 0 }
    ensures  { result = m+n }
  =
    let r = ref n in
    let i = ref m in
    while  (!i > 0) do
      invariant { !r + !i = m + n /\ !i >= 0 }
      variant   { !i }
      r :=  (!r) + 1;
      i := (!i) - 1
    done;
    !r

end